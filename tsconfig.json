{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"

  ],
  "compileOnSave": false,
  "compilerOptions": {    
    "outDir": ".",
    "module": "commonjs",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "listFiles": true,
    "sourceRoot": "src",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
